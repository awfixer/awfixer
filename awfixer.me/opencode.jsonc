{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [".opencode/doc/**"],
  "mcp": {
    "prismic": {
      "type": "local",
      "command": ["bun", "x", "@prismicio/mcp-server@latest"],
      "enabled": true,
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "$CONTEXT7_API_KEY",
      },
    },
  },
}
